<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <style>
    #main {
      height: 100%;
      width: 100%;
    }
    #nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-left: 2vw;
      margin-right: 2vw;
      text-transform: uppercase;
    }
    .navp2 {
      display: flex;
      align-items: center;
      gap: 2vw;
    }
    #hi {
      margin-left: 3vw;
    }
    .hissab {
      height: 5vh;
      width: 15vw;
      margin-left: 3vw;
      background-color: rgba(0, 0, 255, 0.329);
      text-align: center;
      border-radius: 20px;
    }
    .hissabdiv {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin: 1vh;
    }
   #no{
      text-transform: capitalize;
      padding-left: 20px;
      font-size: 50px;
    }
    .p1 {
      display: flex;
      align-items: center;
      gap: 1vw;
    }
    a {
      text-decoration: none;
    }
    .aro {
      border-radius: 50%;
      background-color: white;
    }
    .delete {
      height: 20px;
      width: 20px;

      border-radius: 50%;
      background-color: white;
    }
  </style>
  <body>
    <div id="main">
      <div id="nav">
        <div class="navp1">
          <h1>khaatabook</h1>
        </div>
        <div class="navp2">
        <a href="/">
          <h2>home</h2>
        </a>
          <a href="/create"><h2>create a new hissab</h2></a>
        </div>
      </div>

      <h1 id="hi">All hissab kitab</h1>
      <% if(files.length > 0){ %> <% files.forEach(function(file){%>

      <div class="hissab">
        <div class="hissabdiv">
          <div class="p1">
            <h3><%=file.split(".")[0]%></h3>
            <div class="aro">
              <a href="/read/<%=file %>">
                <i class="ri-arrow-right-line"></i>
              </a>
            </div>
          </div>
          <div class="p1">
            <div class="edit">
              <a href="/edit/<%=file %>">
                <i class="ri-pencil-line"></i>
              </a>
            </div>
            <div class="delete">
             <a href="/delete/<%=file%>">
              <i class="ri-delete-bin-6-fill"></i>
             </a> 
            </div>
          </div>
        </div>
      </div>
      <%})%> <% }else{ %>
      <h3 id="no">no hissab</h3>
      <% } %>
    </div>
  </body>
</html>
